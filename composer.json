  "keywords": [ "sql", "pdo", "database", "dop" ],
  "license": "MIT",
  "homepage": "https://github.com/morris/dop",
  "authors": [
    {
      "name": "Morris Brodersen",
      "homepage": "https://morrisbrodersen.de"
    }
  ],

  "autoload": {
